<tr class="hover:bg-gray-50 transition-colors duration-150">
  <td class="px-6 py-4">
    <div class="text-sm font-medium text-gray-900"><%= order.client.name %></div>
    <div class="text-sm text-gray-500"><%= order.client.email %></div>
  </td>
  <td class="px-6 py-4">
    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
      <%= case order.status
          when 'delivered' then 'bg-green-100 text-green-800'
          when 'confirmed' then 'bg-blue-100 text-blue-800'
          when 'cancelled' then 'bg-red-100 text-red-800'
          else 'bg-yellow-100 text-yellow-800'
          end %>">
      <%= case order.status
          when 'delivered' then '✅'
          when 'confirmed' then '⏳'
          when 'cancelled' then '❌'
          else '✔️'
          end %>
      <span class="ml-1"><%= order.status.titleize %></span>
    </span>
  </td>
  <td class="px-6 py-4 text-sm text-gray-900">
    <%= number_to_currency(order.total_price) %>
  </td>
  <td class="px-6 py-4 text-sm text-gray-500">
    <%= order.delivery_date.strftime("%b %d, %Y") %>
  </td>
  <td class="px-6 py-4 text-sm text-gray-500">
    <%= order.created_at.strftime("%b %d, %Y") %>
  </td>
  <td class="px-6 py-4 text-sm font-medium">
    <div class="flex items-center space-x-3">
      <%= link_to order_path(order), class: "text-gray-400 hover:text-blue-600 transition-colors duration-200", data: { turbo: false } do %>
        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
      <%= link_to edit_order_path(order), class: "text-gray-400 hover:text-indigo-600 transition-colors duration-200", data: { turbo: false } do %>
        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
    </div>
  </td>
</tr> 